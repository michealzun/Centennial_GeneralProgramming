<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mike.healthapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Introduction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InputsActivity" />
        <activity android:name=".BloodPressureActivity" />
        <activity android:name=".BMIActivity" />
        <activity android:name=".ResultsActivity" />
        <activity android:name=".FitnessLogActivity" />
        <activity android:name=".ViewLogActivity"></activity>

        <service android:name=".Sound">
            <intent-filter>
                <action android:name="mike.healthapp.Sound" />
            </intent-filter>
        </service>
    </application>

</manifest>