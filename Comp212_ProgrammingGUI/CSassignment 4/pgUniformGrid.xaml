<Page x:Class="aaaaaa.pgUniformGrid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aaaaaa"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="pgUniformGrid">

    <UniformGrid Rows="2" Columns="3">
        <Label Content="1" Background="AliceBlue"/>
        <Label Content="2" Background="Salmon"/>
        <Label Content="3" Background="DarkCyan"/>
        <Label Content="4" Background="HotPink"/>
        <Label Content="5" Background="OldLace"/>
        <Label Content="6" Background="Yellow"/>
    </UniformGrid>
</Page>
