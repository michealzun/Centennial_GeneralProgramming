<Page x:Class="aaaaaa.pgDockPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:aaaaaa"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="pgDockPanel">

    <DockPanel>
        <DockPanel.Resources>
            <Style TargetType="Label">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </DockPanel.Resources>
        <Label DockPanel.Dock="Top" Content="Top" Background="AliceBlue"/>
        <Label DockPanel.Dock="Left" Content="Left" Background="Salmon"/>
        <Label DockPanel.Dock="Right" Content="Right" Background="DarkCyan"/>
        <Label DockPanel.Dock="Bottom" Content="Bottom" Background="HotPink"/>
        <Label DockPanel.Dock="Top" Content="Top2" Background="OldLace"/>
        <Label DockPanel.Dock="Top" Content="Top3" Background="Yellow"/>
    </DockPanel>
</Page>
