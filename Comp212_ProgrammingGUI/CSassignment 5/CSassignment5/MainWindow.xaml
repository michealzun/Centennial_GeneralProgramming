<Window x:Class="CSassignment5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSassignment5"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <UniformGrid Columns="3" Rows="2" ButtonBase.Click="UniformGrid_Click">
        <Button x:Name="btnOneTime" Content="One time only"/>
        <Button x:Name="btnToSource" Content="One way to source"/>
        <Button x:Name="btnToTarget" Content="One way to target"/>
        <Button x:Name="btnTwoWay" Content="Two way"/>
        <Button x:Name="btnCoding" Content="Imperative Coding"/>
    </UniformGrid>
</Window>
